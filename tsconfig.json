{
  "compilerOptions": {
    "target": "ES2016",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true, // Generate .d.ts files
    "moduleResolution": "node" // Ensure Node.js module resolution
  },
  "include": ["src/**/*"], // Include all files in src
  "exclude": ["node_modules", "dist", "test"] // Exclude unnecessary directories
}
